<!DOCTYPE html>
<html>

	<head>
		<meta charset="UTF-8">
		<title>
			{% block title %}Plateforme
			{% endblock %}
		</title>
		<link
		rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text></svg>">
		{# Run `composer require symfony/webpack-encore-bundle` to start using Symfony UX #}
		<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL" crossorigin="anonymous"></script>
		<script src="https://kit.fontawesome.com/8ce0d98d5e.js" crossorigin="anonymous"></script>
		<link rel="stylesheet" href="https://bootswatch.com/5/journal/bootstrap.min.css">
		<link rel="stylesheet" href="{{asset('assets/css/style.css')}}">
		{% block stylesheets %}
			{{ encore_entry_link_tags('app') }}
		{% endblock %}

		{% block javascripts %}
			{{ encore_entry_script_tags('app') }}
		{% endblock %}
	</head>

	<body>

		<nav class="navbar navbar-expand-lg bg-primary" data-bs-theme="dark">
    <div class="container-fluid">
        <li class="nav-item" style="list-style-type: none;">
            <a class="navbar-brand" href="{{path('app_home')}}">
                <img src="{{ asset('assets/img/LOGO-blanc-LaRoseraie-vector.svg') }}" alt="" style="width: 50px; height: auto; margin-right:  20px; border: solid 1px; background-color: white; border-radius: 5%;">
            </a>
        </li>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarColor01" aria-controls="navbarColor01" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarColor01">
            <ul class="navbar-nav me-auto">
                <li class="nav-item">
                    <a href="{{path('app_home')}}" class="nav-link">Accueil</a>
                </li>
                {% if app.user %}
                {% if is_granted('ROLE_ADMIN') %}
                
                <li class="nav-item">
                    <a href="{{path('app_booking')}}" class="nav-link">Calendrier</a>
                </li>
                <li class="nav-item">
                    <a href="{{ path('app_arrivee_ajouter')}}" class="nav-link">Ajouter arrivées</a>
                </li>
                <li class="nav-item">
                    <a href="{{ path('app_depart-ajouter')}}" class="nav-link">Ajouter départs</a>
                </li>
                <li class="nav-item">
                    <a href="{{ path('app_upload_image') }}" class="nav-link">Ajouter une image</a>
                </li>
                {% endif %}
                {% endif %}
            </ul>
            <ul class="navbar-nav ms-auto" style="width: auto; display: flex;">
                {% if app.user %}
                 {# {% if is_granted('ROLE_ADMIN') %}  #}
                     <li class="nav-item" style="list-style-type: none;">
                    <a class="nav-link" href="{{path('app_logout')}}">
                        <i class="fa-solid fa-user" style="color: #F7B8BB;"></i> Deconnexion
                    </a>
                </li>
                 {% if is_granted('ROLE_ADMIN') %}
                  <li class="nav-item" style="list-style-type: none;">
                    <a class="nav-link" href="{{path('app_register')}}">
                        <i class="fa-solid fa-user" style="color: #F7B8BB;"></i> créer un compte utilisateur
                    </a>
                </li>
                 {% endif %}
               {# {% endif %} #}
               
                {% else %}
                <li class="nav-item" style="list-style-type: none;">
                    <a class="nav-link" href="{{path('app_login')}}">
                        <i class="fa-solid fa-user" style="color: #F7B8BB;"></i> Connexion
                    </a>
                </li>
                {# <li class="nav-item" style="list-style-type: none;">
                    <a class="nav-link" href="{{path('app_register')}}">
                        <i class="fa-solid fa-user" style="color: #F7B8BB;"></i> Créer un compte
                    </a>
                </li> #}
                {% endif %}
            </ul>
        </div>
    </div>
</nav>


		{% block body %}{% endblock %}
	</body>

</html>
